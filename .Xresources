*renderFont: true
UXTerm.allow_bold:           true
UXTerm*font: xft:source code pro for powerline:semibold:pixelsize=18
UXTerm*imFont: xft:source code pro for powerline:semibold:pixelsize=18
UXTerm*boldFont: xft:source code pro for powerline:bold:pixelsize=18
UXTerm*italicFont: xft:source code pro for powerline:italic:pixelsize=18
UXTerm*boldItalicFont: xft:source code pro for powerline:bold:italic:pixelsize=18
UXTerm*letterSpace: -1

scrollBar: false
*cursorBlink: false
*termName: xterm-256color

UXTerm*locale: true
UXTerm*utf8: true
UXTerm*utf8Title: true
UXTerm*preeditType: Root

! Trim trailing spaces
UXTerm*trimSelection: true

! Fix alt-key inputting
UXTerm*eightBitInput: false
UXTerm*metaSendsEscape: true

! Copy and paste with clipboard
UXTerm*translations: #override \
	Ctrl Shift <KeyPress> C: copy-selection(CLIPBOARD) \n\
	Ctrl Shift <KeyPress> V: insert-selection(CLIPBOARD)

! Select email/url by double click
XTerm*charClass: 33:48,37-38:48,45-47:48,64:48,58:48,126:48,61:48,63:48,43:48,35:48

*.foreground:    #ABB2BF
*.background:    #1E2127
*.cursorColor:   #5C6370
*.highlightColor:#3A3F4B

! Black and grey
*.color0:        #1E2127
*.color8:        #5C6370
! Red
*.color1:        #E06C75
*.color9:        #E06C75
! Green
*.color2:        #98C379
*.color10:       #98C379
! Yellow
*.color3:        #D19A66
*.color11:       #D19A66
! Blue
*.color4:        #61AFEF
*.color12:       #61AFEF
! Magenta
*.color5:        #C678DD
*.color13:       #C678DD
! Cyan
*.color6:        #56B6C2
*.color14:       #56B6C2
! White
*.color7:        #ABB2BF
*.color15:       #FFFFFF
